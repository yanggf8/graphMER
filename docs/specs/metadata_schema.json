{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "version": "1.1",
  "type": "object",
  "required": ["schema_version", "validation_date", "dataset_hash", "validation_results", "run_name"],
  "properties": {
    "schema_version": {"type": "string", "enum": ["1.0", "1.1"]},
    "validation_date": {"type": "string", "format": "date-time"},
    "run_name": {"type": "string", "minLength": 1},
    "commit_hash": {"type": "string"},
    "dataset_hash": {"type": "string", "pattern": "^sha256:[a-f0-9]{64}$"},
    "environment": {
      "type": "object",
      "properties": {
        "python_version": {"type": "string"},
        "platform": {"type": "string"}
      }
    },
    "validation_results": {
      "type": "object",
      "required": ["mnm_improvement_percent", "total_triples"],
      "properties": {
        "mnm_improvement_percent": {"type": ["number", "null"], "minimum": 0},
        "total_triples": {"type": "integer", "minimum": 1000},
        "domain_range_ratio": {"type": "number", "minimum": 0, "maximum": 1}
      }
    },
    "artifacts": {
      "type": "object",
      "properties": {
        "metrics_csv": {"type": "string"},
        "final_checkpoint": {"type": "string"}
      }
    },
    "training_results": {
      "type": "object",
      "properties": {
        "steps_completed": {"type": "integer", "minimum": 0},
        "final_mlm_accuracy": {"type": "number", "minimum": 0, "maximum": 1},
        "final_mnm_accuracy": {"type": "number", "minimum": 0, "maximum": 1}
      }
    }
  }
}
